{% extends 'base.html.twig' %}

{% block title %}Inscription | Bricolage{% endblock %}

{% block body %}
<div style="max-width: 500px; margin: 60px auto; padding: 40px; background: white; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
    <h1 style="text-align: center; margin-bottom: 30px; font-size: 2rem; color: #1e293b;">Créer un compte</h1>
    
    <p style="text-align: center; margin-bottom: 30px; color: #64748b;">
        Déjà un compte? <a href="{{ path('app_login') }}" style="color: #667eea; text-decoration: none; font-weight: 600;">Se connecter</a>
    </p>

    {% for message in app.flashes('error') %}
        <div style="background-color: #fee2e2; border: 1px solid #fecaca; color: #dc2626; padding: 12px; border-radius: 8px; margin-bottom: 20px;">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div style="background-color: #dcfce7; border: 1px solid #bbf7d0; color: #16a34a; padding: 12px; border-radius: 8px; margin-bottom: 20px;">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

    <div style="margin-bottom: 20px;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #1e293b;">{{ form_label(registrationForm.prenom) }}</label>
        {{ form_widget(registrationForm.prenom, {'attr': {'placeholder': 'Ex: Jean', 'style': 'width: 100%; padding: 10px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 1rem;'}}) }}
        {% if form_errors(registrationForm.prenom) %}
            <div style="color: #dc2626; font-size: 0.875rem; margin-top: 4px;">
                {{ form_errors(registrationForm.prenom) }}
            </div>
        {% endif %}
    </div>

    <div style="margin-bottom: 20px;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #1e293b;">{{ form_label(registrationForm.nom) }}</label>
        {{ form_widget(registrationForm.nom, {'attr': {'placeholder': 'Ex: Dupont', 'style': 'width: 100%; padding: 10px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 1rem;'}}) }}
        {% if form_errors(registrationForm.nom) %}
            <div style="color: #dc2626; font-size: 0.875rem; margin-top: 4px;">
                {{ form_errors(registrationForm.nom) }}
            </div>
        {% endif %}
    </div>

    <div style="margin-bottom: 20px;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #1e293b;">{{ form_label(registrationForm.email) }}</label>
        {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'votre.email@example.com', 'style': 'width: 100%; padding: 10px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 1rem;'}}) }}
        {% if form_errors(registrationForm.email) %}
            <div style="color: #dc2626; font-size: 0.875rem; margin-top: 4px;">
                {{ form_errors(registrationForm.email) }}
            </div>
        {% endif %}
    </div>

    <div style="margin-bottom: 20px;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #1e293b;">{{ form_label(registrationForm.plainPassword) }}</label>
        {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Minimum 6 caractères', 'style': 'width: 100%; padding: 10px; border: 2px solid #e2e8f0; border-radius: 8px; font-size: 1rem;'}}) }}
        {% if form_errors(registrationForm.plainPassword) %}
            <div style="color: #dc2626; font-size: 0.875rem; margin-top: 4px;">
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
        {% endif %}
    </div>

    <div style="margin-bottom: 30px;">
        <label style="display: block; margin-bottom: 12px; font-weight: 600; color: #1e293b;">{{ form_label(registrationForm.role) }}</label>
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
            {% for child in registrationForm.role %}
                <div style="display: flex; align-items: center; padding: 12px; border: 2px solid #e2e8f0; border-radius: 8px; cursor: pointer; transition: all 0.3s;">
                    {{ form_widget(child) }}
                    <label for="{{ child.vars.id }}" style="margin-left: 8px; cursor: pointer; flex-grow: 1;">{{ child.vars.label }}</label>
                </div>
            {% endfor %}
        </div>
        {% if form_errors(registrationForm.role) %}
            <div style="color: #dc2626; font-size: 0.875rem; margin-top: 8px;">
                {{ form_errors(registrationForm.role) }}
            </div>
        {% endif %}
    </div>

    <button type="submit" style="width: 100%; padding: 12px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 8px; font-weight: 600; font-size: 1rem; cursor: pointer; margin-top: 20px;">
        Créer mon compte
    </button>

    {{ form_end(registrationForm) }}

    <div style="margin-top: 30px; text-align: center; padding-top: 20px; border-top: 1px solid #e2e8f0;">
        <p style="color: #64748b; margin-bottom: 15px;">ou inscrivez-vous avec</p>
        <a href="{{ path('connect_google_start') }}" style="display: inline-flex; align-items: center; gap: 8px; padding: 10px 20px; border: 2px solid #e2e8f0; border-radius: 8px; text-decoration: none; color: #1e293b; font-weight: 600; transition: all 0.3s;">
            <img src="https://www.gstatic.com/images/branding/product/1x/gsa_512dp.png" alt="Google" style="width: 20px; height: 20px;">
            Google
        </a>
    </div>
</div>
{% endblock %}
