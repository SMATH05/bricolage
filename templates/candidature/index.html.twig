{% extends 'base.html.twig' %}

{% block title %}Gestion des Candidatures{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex align-items-center justify-content-between mb-4 border-bottom pb-2">
            <h1>Candidatures</h1>
            <a href="{{ path('app_candidature_ajouter') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Nouvelle Candidature
            </a>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">ID</th>
                                <th>Date Proposition</th>
                                <th>Statut</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for candidature in candidatures %}
                            <tr>
                                <td class="ps-4 fw-bold">#{{ candidature.id }}</td>
                                <td>{{ candidature.datePro|date('d/m/Y') }}</td>
                                <td><span class="badge bg-secondary">{{ candidature.statut }}</span></td>
                                <td class="text-end pe-4">
                                    <a href="{{ path('app_Candidature_modifier', {id: candidature.id}) }}" class="btn btn-sm btn-link text-decoration-none" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('app_supprimercandidature', {id: candidature.id}) }}" 
                                       class="btn btn-sm btn-link text-danger text-decoration-none" 
                                       onclick="return confirm('Confirmer la suppression ?');"
                                       title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">Aucune candidature trouv√©e.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}