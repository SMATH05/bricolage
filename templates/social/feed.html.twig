{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Feed'|trans }}
	- Bricolage
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.cursor-pointer {
			cursor: pointer;
		}
		.bg-hover-soft:hover {
			background-color: #f8f9fa !important;
		}
		.post-card {
			border-color: rgba(0, 0, 0, .1) !important;
		}
		.avatar-sm,
		.avatar-md {
			flex-shrink: 0;
		}
		.post-media-container {
			overflow: hidden;
			background: #000;
		}
		.post-action-like i {
			transition: transform 0.2s cubic-bezier(0.17,.67,0.83,.67);
		}
		.post-action-like:active i {
			transform: scale(1.3);
		}
		.feed-container {
			max-width: 600px;
			margin: 0 auto;
			padding-top: 100px;
		}
	</style>
{% endblock %}

{% block body %}
<div
	class="feed-container py-4">
	<!-- New Post Section -->
	{% if app.user %}
		<div class="glass-card p-4 mb-4 animate-slide-up shadow-sm rounded-4">
			<div class="d-flex align-items-center gap-3 mb-3">
				<div class="avatar-sm rounded-circle shadow-sm" style="width: 45px; height: 45px; background: linear-gradient(45deg, var(--primary-color), var(--accent-color)); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;">
					{{ app.user.userIdentifier|slice(0, 1)|upper }}
				</div>
				<button class="btn btn-light bg-hover-soft w-100 rounded-pill text-start text-muted px-4 py-2 border" data-bs-toggle="modal" data-bs-target="#createPostModal">
					{{ 'Partagez vos travaux...'|trans }}
				</button>
			</div>
			<div class="d-flex justify-content-around border-top pt-3">
				<button class="btn btn-link text-decoration-none text-muted fw-bold d-flex align-items-center gap-2" data-bs-toggle="modal" data-bs-target="#createPostModal">
					<i class="fas fa-image text-success"></i>
					{{ 'Photo'|trans }}
				</button>
				<button class="btn btn-link text-decoration-none text-muted fw-bold d-flex align-items-center gap-2" data-bs-toggle="modal" data-bs-target="#createPostModal">
					<i class="fas fa-video text-primary"></i>
					{{ 'Video'|trans }}
				</button>
			</div>
		</div>
	{% endif %}

	<!-- Feed Section -->
	<div class="social-feed">
		{% if posts is empty %}
			<div class="text-center py-5 glass-card animate-fade-in rounded-4">
				<div class="mb-4">
					<i class="fas fa-stream fa-4x text-muted opacity-25"></i>
				</div>
				<h3 class="fw-bold">{{ 'Aucun post pour le moment'|trans }}</h3>
				<p class="text-muted">{{ 'Soyez le premier à partager votre expérience !'|trans }}</p>
				{% if not app.user %}
					<a href="{{ path('app_login') }}" class="btn btn-primary rounded-pill px-4 mt-3">{{ 'Connectez-vous pour poster'|trans }}</a>
				{% endif %}
			</div>
		{% else %}
			{% for post in posts %}
				<div
					class="post-card mb-4 animate-slide-up bg-white rounded-4 overflow-hidden border shadow-sm">
					<!-- Post Header -->
					<div class="p-3 d-flex align-items-center justify-content-between">
						<div class="d-flex align-items-center gap-3">
							<div class="avatar-md rounded-circle" style="width: 40px; height: 40px; background: #eee; display: flex; align-items: center; justify-content: center; font-weight: bold; border: 2px solid #fff; box-shadow: 0 0 10px rgba(0,0,0,0.05);">
								{{ post.author.prenom ? post.author.prenom|slice(0, 1)|upper : post.author.email|slice(0, 1)|upper }}
							</div>
							<div>
								<h6 class="mb-0 fw-bold">
									{% if post.author.prenom and post.author.nom %}
										{{ post.author.prenom }} {{ post.author.nom }}
									{% else %}
										{{ post.author.email }}
									{% endif %}
								</h6>
								<small class="text-muted">{{ post.createdAt|date('d/m/Y H:i') }}</small>
							</div>
						</div>
						<div class="dropdown">
							<button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown">
								<i class="fas fa-ellipsis-h"></i>
							</button>
							<ul class="dropdown-menu dropdown-menu-end border-0 shadow">
								<li>
									<a class="dropdown-item" href="#">
										<i class="fas fa-flag me-2"></i>
										{{ 'Signaler'|trans }}</a>
								</li>
							</ul>
						</div>
					</div>

					<!-- Post Content -->
					{% if post.content %}
						<div class="px-3 pb-3">
							<p class="mb-0">{{ post.content }}</p>
						</div>
					{% endif %}

					<!-- Post Media -->
					{% if post.media %}
						<div class="post-media-container bg-light" style="min-height: 300px; display: flex; align-items: center; justify-content: center;">
							{% if post.mediaType == 'image' %}
								<img src="/uploads/posts/{{ post.media }}" class="img-fluid w-100" style="max-height: 600px; object-fit: cover;" alt="Post media" onerror="console.error('Image failed to load:', this.src); this.style.display='none'; this.parentElement.innerHTML='<div class=\\'text-center p-4\\'><i class=\\'fas fa-exclamation-triangle fa-3x text-warning\\'></i><br><small>Image non disponible</small></div>';">
								<!-- Debug: Media={{ post.media }}, Type={{ post.mediaType }}, FullPath=/uploads/posts/{{ post.media }} -->
							{% elseif post.mediaType == 'video' %}
								{% set _ext = post.media|split('.')|last|lower %}
								{% set _mime = _ext == 'mp4' ? 'video/mp4' : (_ext == 'webm' ? 'video/webm' : ((_ext == 'ogg' or _ext == 'ogv') ? 'video/ogg' : (_ext == 'mov' ? 'video/quicktime' : 'application/octet-stream'))) %}
								<video controls class="w-100" style="max-height: 600px; background: #000;" preload="metadata" onerror="console.error('Video failed to load:', this.currentSrc || this.src); this.style.display='none'; this.parentElement.innerHTML='<div class=\\'text-center p-4\\'><i class=\\'fas fa-exclamation-triangle fa-3x text-warning\\'></i><br><small>Vidéo non disponible</small></div>';">
									<source src="/uploads/posts/{{ post.media }}" type="{{ _mime }}">
									{{ 'Votre navigateur ne supporte pas la balise vidéo.'|trans }}
								</video>
								<!-- Debug: Media={{ post.media }}, Type={{ post.mediaType }}, FullPath=/uploads/posts/{{ post.media }} -->
							{% else %}
								<div class="text-center p-4">
									<i class="fas fa-file fa-3x text-muted"></i>
									<p class="mb-0">{{ 'Type de média non supporté'|trans }}</p>
								</div>
							{% endif %}
						</div>
					{% else %}
						<!-- Debug: No media found for post {{ post.id }} -->
					{% endif %}

					<!-- Post Actions -->
					<div class="p-3">
						<div class="d-flex align-items-center gap-4 mb-2">
							<button class="btn btn-link p-0 text-decoration-none post-action-like" data-id="{{ post.id }}" style="font-size: 1.5rem; color: #262626;">
								<i class="far fa-heart"></i>
							</button>
							<button class="btn btn-link p-0 text-decoration-none" style="font-size: 1.5rem; color: #262626;" onclick="document.getElementById('comment-input-{{ post.id }}').focus()">
								<i class="far fa-comment"></i>
							</button>
							<button class="btn btn-link p-0 text-decoration-none" style="font-size: 1.5rem; color: #262626;">
								<i class="far fa-paper-plane"></i>
							</button>
						</div>
						<div class="fw-bold mb-2">
							<span id="likes-count-{{ post.id }}">{{ post.likes|length }}</span>
							{{ 'J\'aime'|trans }}
							</div>

							<!-- Comments List -->
							<div class="comments-preview mb-3">
								{% for comment in post.comments|slice(0, 3) %}
									<div class="mb-1">
										<span class="fw-bold">{{ comment.author.userIdentifier }}</span> {{ comment.content }}
									</div>
								{% endfor %}
								{% if post.comments|length > 3 %}
									<a href="#" class="text-muted small text-decoration-none">{{ 'Voir les ' ~ post.comments|length ~ ' commentaires'|trans }}</a>
								{% endif %}
							</div>

							<!-- Comment Input -->
							{% if app.user %}
								<form action="{{ path('app_social_comment', {id: post.id}) }}" method="POST" class="mt-2 border-top pt-2 d-flex align-items-center gap-2">
									<input type="text" id="comment-input-{{ post.id }}" name="content" class="form-control border-0 shadow-none px-0" placeholder="{{ 'Ajouter un commentaire...'|trans }}" required>
									<button type="submit" class="btn btn-link fw-bold text-primary text-decoration-none">{{ 'Publier'|trans }}</button>
								</form>
							{% endif %}
						</div>
					</div>
				{% endfor %}
			{% endif %}
		</div>
	</div>

	<!-- Modal Creation Post -->
	{% if app.user %}
		<div class="modal fade" id="createPostModal" tabindex="-1" aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content border-0 shadow-lg rounded-4">
					<div class="modal-header border-bottom-0">
						<h5 class="modal-title fw-bold w-100 text-center">{{ 'Créer une publication'|trans }}</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<form action="{{ path('app_social_post_create') }}" method="POST" enctype="multipart/form-data">
						<div class="modal-body">
							<div class="d-flex align-items-center gap-3 mb-3">
								<div class="avatar-sm rounded-circle" style="width: 35px; height: 35px; background: #eee; display: flex; align-items: center; justify-content: center; font-weight: bold;">
									{{ app.user.userIdentifier|slice(0, 1)|upper }}
								</div>
								<span class="fw-bold">{{ app.user.userIdentifier }}</span>
							</div>
							<textarea name="content" class="form-control border-0 shadow-none p-0 mb-3" rows="3" placeholder="{{ 'Que voulez-vous partager ?'|trans }}" style="font-size: 1.2rem; resize: none;"></textarea>
							
							<div class="preview-container mb-3 d-none">
								<img id="mediaPreview" src="#" class="img-fluid rounded-3 border" style="max-height: 200px; display: block; margin: 0 auto;">
							</div>

							<div class="border rounded-3 p-3">
								<p class="text-muted small mb-2">{{ 'Ajouter à votre publication'|trans }}</p>
								<div class="d-flex gap-3">
									<button type="button" class="btn btn-light bg-hover-soft rounded-pill px-3 py-2 border mb-0" onclick="document.getElementById('mediaInput').click()">
										<i class="fas fa-images text-success me-2"></i> {{ 'Photos/Vidéos'|trans }}
									</button>
									<input type="file" id="mediaInput" name="media" class="d-none" accept="image/*,video/*" onchange="previewFile(this)">
								</div>
							</div>
						</div>
						<div class="modal-footer border-top-0 p-3">
							<button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold py-2 shadow-sm">{{ 'Publier'|trans }}</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	{% endif %}

	<script>
		function previewFile(input) {
			const container = document.querySelector('.preview-container');
			const preview = document.getElementById('mediaPreview');
			
			if (input.files && input.files[0]) {
				const file = input.files[0];
				const reader = new FileReader();
				
				reader.onload = function(e) {
					// Clear previous content
					container.innerHTML = '';
					
					// Check file type
					if (file.type.startsWith('image/')) {
						// Image preview
						const img = document.createElement('img');
						img.src = e.target.result;
						img.className = 'img-fluid rounded-3 border';
						img.style.maxHeight = '200px';
						img.style.display = 'block';
						img.style.margin = '0 auto';
						img.alt = 'Preview';
						container.appendChild(img);
					} else if (file.type.startsWith('video/')) {
						// Video preview
						const video = document.createElement('video');
						video.src = e.target.result;
						video.className = 'img-fluid rounded-3 border';
						video.style.maxHeight = '200px';
						video.style.display = 'block';
						video.style.margin = '0 auto';
						video.controls = true;
						video.muted = true;
						container.appendChild(video);
					} else {
						// File icon for other types
						const div = document.createElement('div');
						div.className = 'text-center p-3';
						div.innerHTML = '<i class="fas fa-file fa-3x text-muted"></i><br><small class="text-muted">' + file.name + '</small>';
						container.appendChild(div);
					}
					
					container.classList.remove('d-none');
				}
				
				reader.onerror = function() {
					console.error('Error reading file');
					container.innerHTML = '<div class="text-center p-3"><i class="fas fa-exclamation-triangle fa-2x text-warning"></i><br><small>Erreur de lecture du fichier</small></div>';
					container.classList.remove('d-none');
				};
				
				// Read file based on type
				if (file.type.startsWith('video/')) {
					reader.readAsDataURL(file);
				} else {
					reader.readAsDataURL(file);
				}
			} else {
				// Hide preview if no file selected
				container.classList.add('d-none');
			}
		}

		// Like AJAX
		document.querySelectorAll('.post-action-like').forEach(button => {
			button.addEventListener('click', function(e) {
				e.preventDefault();
				const postId = this.dataset.id;
				const icon = this.querySelector('i');
				const countSpan = document.getElementById(`likes-count-${postId}`);

				fetch(`/social/like/${postId}`, {
					method: 'POST',
					headers: {'X-Requested-With': 'XMLHttpRequest'}
				})
				.then(response => response.json())
				.then(data => {
					if (data.liked) {
						icon.classList.remove('far');
						icon.classList.add('fas');
						icon.style.color = '#ed4956';
					} else {
						icon.classList.remove('fas');
						icon.classList.add('far');
						icon.style.color = '#262626';
					}
					countSpan.textContent = data.likesCount;
				});
			});
		});
	</script>
{% endblock %}
