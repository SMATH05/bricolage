{# Modern Form Component #}
<div class="form-modern {{ form_class|default('') }}">
    {% if form_title %}
        <div class="form-header">
            <h3 class="form-title">{{ form_title }}</h3>
            {% if form_subtitle %}
                <p class="form-subtitle">{{ form_subtitle }}</p>
            {% endif %}
        </div>
    {% endif %}
    
    <div class="form-body">
        {% block form_content %}{% endblock %}
    </div>
    
    {% if form_footer %}
        <div class="form-footer">
            <p class="form-footer-text">{{ form_footer }}</p>
        </div>
    {% endif %}
</div>

<style>
.form-modern {
    background: white;
    border-radius: 16px;
    padding: 32px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid #e2e8f0;
}

.form-header {
    text-align: center;
    margin-bottom: 24px;
}

.form-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 8px;
}

.form-subtitle {
    color: #64748b;
    font-size: 0.95rem;
    margin: 0;
}

.form-body {
    margin-bottom: 24px;
}

.form-modern .form-control,
.form-modern .form-select {
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    padding: 12px 16px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: #f8f9fa;
}

.form-modern .form-control:focus,
.form-modern .form-select:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0 0.2px rgba(102, 126, 234, 0.1);
    outline: none;
}

.form-modern .btn {
    border-radius: 25px;
    padding: 12px 24px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.form-modern .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.form-modern .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
}

.form-modern .btn-secondary {
    background: #6c757d;
    color: white;
}

.form-modern .btn-secondary:hover {
    background: #5a6268;
}

.form-footer {
    text-align: center;
    color: #64748b;
    font-size: 0.875rem;
}

.form-footer-text {
    margin: 0;
}

@media (max-width: 768px) {
    .form-modern {
        padding: 24px;
        margin: 16px;
    }
}
</style>
