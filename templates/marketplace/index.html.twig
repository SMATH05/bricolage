{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Marketplace'|trans }}
	| Bricolage
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		.marketplace-hero {
			background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
			padding: 60px 0;
			border-radius: 0 0 40px 40px;
			margin-bottom: -40px;
			color: white;
		}

		.product-card {
			background: white;
			border: none;
			border-radius: 24px;
			overflow: hidden;
			transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
			position: relative;
		}

		.product-card:hover {
			transform: translateY(-10px);
			box-shadow: 0 30px 60px -12px rgba(0, 0, 0, 0.15);
		}

		.product-image-wrapper {
			height: 240px;
			position: relative;
			overflow: hidden;
		}

		.product-image-wrapper img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			transition: transform 0.6s ease;
		}

		.product-card:hover .product-image-wrapper img {
			transform: scale(1.1);
		}

		.price-tag {
			position: absolute;
			top: 20px;
			right: 20px;
			background: white;
			color: #0f172a;
			font-weight: 800;
			padding: 8px 16px;
			border-radius: 12px;
			box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
			z-index: 2;
		}

		.category-chip {
			display: inline-block;
			background: #f1f5f9;
			color: #64748b;
			font-size: 0.75rem;
			font-weight: 700;
			text-transform: uppercase;
			letter-spacing: 0.5px;
			padding: 4px 12px;
			border-radius: 100px;
			margin-bottom: 12px;
		}

		.product-title {
			font-size: 1.1rem;
			font-weight: 700;
			color: #1e293b;
			margin-bottom: 8px;
			display: -webkit-box;
			-webkit-line-clamp: 1;
			-webkit-box-orient: vertical;
			overflow: hidden;
		}

		.seller-info {
			display: flex;
			align-items: center;
			gap: 10px;
			padding-top: 15px;
			border-top: 1px solid #f1f5f9;
			margin-top: 15px;
		}

		.seller-avatar {
			width: 30px;
			height: 30px;
			border-radius: 8px;
			background: #e2e8f0;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 0.8rem;
			font-weight: 700;
			color: #475569;
		}
	</style>
{% endblock %}

{% block body %}
	{# Marketplace Hero Header #}
	<div class="marketplace-hero">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-7">
					<h1 class="display-4 fw-black mb-3" style="font-weight: 900;">{{ 'Marketplace Bricolage'|trans }}</h1>
					<p class="fs-5 text-white-50 mb-4">{{ "Trouvez les meilleurs outils, matériaux et équipements de qualité professionnelle à prix réduit."|trans }}</p>
					<div class="d-flex gap-3">
						<a href="{{ path('app_marketplace_new') }}" class="btn btn-primary btn-lg rounded-pill px-5 py-3 shadow-lg">
							<i class="fas fa-plus-circle me-2"></i>
							{{ 'Vendre un article'|trans }}
						</a>
						<a href="#articles" class="btn btn-outline-light btn-lg rounded-pill px-4 py-3 border-opacity-25">
							{{ "Explorer plus"|trans }}
						</a>
					</div>
				</div>
				<div class="col-lg-5 d-none d-lg-block text-center">
					<div class="glass-card p-4 rounded-4 rotate-3" style="transform: rotate(2deg);">
						<i class="fas fa-tools fa-6x opacity-25"></i>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div
		class="container py-5 mt-4" id="articles">
		{# Search Form #}
		<div class="row mb-4">
			<div class="col-12">
				<div class="glass-card p-4 rounded-4 shadow-sm">
					<form method="GET" action="{{ path('app_marketplace') }}" class="row g-3 align-items-end">
						<div class="col-md-5">
							<label for="search" class="form-label fw-bold">{{ 'Rechercher un produit'|trans }}</label>
							<input type="text" 
								   id="search" 
								   name="search" 
								   class="form-control form-control-lg rounded-pill border-0 shadow-sm" 
								   placeholder="{{ 'Mots-clés, marque, modèle...'|trans }}"
								   value="{{ search }}">
						</div>
						<div class="col-md-4">
							<label for="category" class="form-label fw-bold">{{ 'Catégorie'|trans }}</label>
							<select id="category" 
									name="category" 
									class="form-select form-select-lg rounded-pill border-0 shadow-sm">
								<option value="">{{ 'Toutes les catégories'|trans }}</option>
								<option value="Outils" {{ category == 'Outils' ? 'selected' : '' }}>{{ 'Outils'|trans }}</option>
								<option value="Matériaux" {{ category == 'Matériaux' ? 'selected' : '' }}>{{ 'Matériaux'|trans }}</option>
								<option value="Jardin" {{ category == 'Jardin' ? 'selected' : '' }}>{{ 'Jardin'|trans }}</option>
								<option value="Électrique" {{ category == 'Électrique' ? 'selected' : '' }}>{{ 'Électrique'|trans }}</option>
							</select>
						</div>
						<div class="col-md-3">
							<button type="submit" class="btn btn-primary btn-lg rounded-pill w-100 shadow-sm">
								<i class="fas fa-search me-2"></i>
								{{ 'Rechercher'|trans }}
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		{# Filter Pills (Visual only for now) #}
		<div class="d-flex flex-wrap gap-2 mb-5 overflow-auto pb-2" style="scrollbar-width: none;">
			<a href="{{ path('app_marketplace') }}" class="btn {{ (search == '' and category == '') ? 'btn-dark' : 'btn-white border' }} rounded-pill px-4 fw-bold shadow-sm text-decoration-none">
				{{ 'Tous'|trans }}
			</a>
			<a href="{{ path('app_marketplace', {category: 'Outils'}) }}" class="btn {{ category == 'Outils' ? 'btn-dark' : 'btn-white border' }} rounded-pill px-4 fw-bold shadow-sm text-decoration-none">
				{{ 'Outils'|trans }}
			</a>
			<a href="{{ path('app_marketplace', {category: 'Matériaux'}) }}" class="btn {{ category == 'Matériaux' ? 'btn-dark' : 'btn-white border' }} rounded-pill px-4 fw-bold shadow-sm text-decoration-none">
				{{ 'Matériaux'|trans }}
			</a>
			<a href="{{ path('app_marketplace', {category: 'Jardin'}) }}" class="btn {{ category == 'Jardin' ? 'btn-dark' : 'btn-white border' }} rounded-pill px-4 fw-bold shadow-sm text-decoration-none">
				{{ 'Jardin'|trans }}
			</a>
			<a href="{{ path('app_marketplace', {category: 'Électrique'}) }}" class="btn {{ category == 'Électrique' ? 'btn-dark' : 'btn-white border' }} rounded-pill px-4 fw-bold shadow-sm text-decoration-none">
				{{ 'Électrique'|trans }}
			</a>
		</div>

		<div class="row g-4">
			{% for product in products %}
				<div class="col-md-6 col-lg-4 col-xl-3">
					<div class="product-card shadow-sm h-100">
						<div class="product-image-wrapper">
							<div class="price-tag">{{ product.price }}
								€</div>
							{% if product.image %}
								<img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.title }}">
							{% else %}
								<div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
									<i class="fas fa-toolbox fa-3x text-muted opacity-25"></i>
								</div>
							{% endif %}
						</div>
						<div class="card-body p-4">
							<span class="category-chip">{{ product.category|trans }}</span>
							<a href="{{ path('app_marketplace_show', {id: product.id}) }}" class="text-decoration-none">
								<h5 class="product-title">{{ product.title }}</h5>
							</a>

							<div class="seller-info">
								<div class="seller-avatar">
									{{ product.user.email|slice(0, 1)|upper }}
								</div>
								<div class="overflow-hidden">
									<small class="text-muted d-block text-truncate">{{ product.user.email }}</small>
								</div>
							</div>

							<div class="mt-4">
								<a href="{{ path('app_marketplace_show', {id: product.id}) }}" class="btn btn-outline-primary w-100 rounded-pill fw-bold py-2">
									{{ 'Détails'|trans }}
								</a>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<div class="col-12 py-5">
					<div class="glass-card text-center p-5 rounded-4">
						<div class="mb-4">
							<i class="fas fa-shopping-basket fa-4x text-accent-primary opacity-25"></i>
						</div>
						<h3 class="fw-bold">{{ "Le marketplace est vide"|trans }}</h3>
						<p class="text-muted mb-4 fs-5">{{ "Soyez le premier à explorer et à vendre vos équipements."|trans }}</p>
						<a href="{{ path('app_marketplace_new') }}" class="btn btn-primary btn-lg rounded-pill px-5">
							{{ "Publier la première annonce"|trans }}
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
