{% extends 'base.html.twig' %}

{% block title %}Liste des chercheurs{% endblock %}

{% block body %}
    <h1>Liste des chercheurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chercheur in chercheurs %}
            <tr>
                <td>{{ chercheur.id }}</td>
                <td>{{ chercheur.nom }}</td>
                <td>{{ chercheur.email }}</td>
                <td>{{ chercheur.description }}</td>
                <td>
                    <a href="{{ path('app_supprimerchercheur', {id: chercheur.id}) }}"
                       class="btn btn-danger"
                       onclick="return confirm('Voulez-vous vraiment supprimer ce chercheur ?');">
                        Supprimer
                    </a>
                        <a href="{{ path('app_chercheur_modifier', {id: chercheur.id}) }}"
                       class="btn btn-danger"
                       onclick="return confirm('Voulez-vous vraiment modifier ce chercheur ?');">
                        modifier
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun chercheur trouv√©.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_chercheur_ajouter') }}" class="btn btn-danger">Ajouter un chercheur</a>
{% endblock %}