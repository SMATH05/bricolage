												<li><hr class="dropdown-divider"></li>
												<li>
													<a class="dropdown-item py-2 text-danger" href="{{ path('app_logout') }}">
														<i class="fas fa-sign-out-alt me-2 opacity-50"></i>
														{{ 'Déconnexion'|trans }}
													</a>
												</li>
											</ul>
										</li>
									{% else %}
										<li class="nav-item">
											<a class="nav-link px-3" href="{{ path('app_login') }}">{{ 'Connexion'|trans }}</a>
										</li>
										<li class="nav-item ms-lg-2">
											<a class="btn btn-primary px-4 rounded-pill shadow-sm" href="{{ path('app_register') }}">
												{{ 'Inscription'|trans }}
											</a>
										</li>
									{% endif %}
								</ul>
							</div>
						</div>
					</nav>
				{% endif %}
				<div class="container mt-3">
					{% for label, messages in app.flashes %}
