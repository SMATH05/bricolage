									<li>
										<i class="fas fa-phone me-2"></i>+212 66569562</li>
								</ul>
							</div>
						</div>
						<hr class="border-secondary mt-4 mb-4 opacity-10">
						<div class="text-center">
							<p class="text-muted small mb-0">&copy; 2026 Bricolage.
								{{ 'Tous droits réservés.'|trans }}</p>
						</div>
					</div>
				</footer>

				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
				{% block javascripts %}{% endblock %}
				<script>
					// Theme Toggle Logic
document.addEventListener('DOMContentLoaded', function () {
const themeToggle = document.getElementById('theme-toggle');
const html = document.documentElement;
const darkIcon = themeToggle.querySelector('.theme-icon-dark');
const lightIcon = themeToggle.querySelector('.theme-icon-light');

function updateIcons(theme) {
if (theme === 'dark') {
darkIcon.classList.remove('d-none');
lightIcon.classList.add('d-none');
} else {
darkIcon.classList.add('d-none');
lightIcon.classList.remove('d-none');
}
}

// Sync icons with initial theme
updateIcons(html.getAttribute('data-theme'));

themeToggle.addEventListener('click', function () {
const currentTheme = html.getAttribute('data-theme');
const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

html.setAttribute('data-theme', newTheme);
localStorage.setItem('theme', newTheme);
updateIcons(newTheme);

// Sync with server if logged in
{% if app.user %}
fetch("{{ path('app_theme_update') }}", {
method: 'POST',
headers: {
'Content-Type': 'application/json'
},
body: JSON.stringify(
{theme: newTheme}
)
}).catch(err => console.error('Failed to sync theme:', err));{% endif %}
});
});
				</script>
			</body>
		</body>
	</html>
