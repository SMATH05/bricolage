								{# Theme Toggle #}
								<button id="theme-toggle" class="btn btn-link nav-link px-2" title="{{ 'Changer de thème'|trans }}">
									<i class="fas fa-moon fa-lg theme-icon-dark d-none"></i>
									<i class="fas fa-sun fa-lg theme-icon-light"></i>
								</button>
								<ul class="navbar-nav ms-auto align-items-center">
									<li class="nav-item dropdown me-2">
										<a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
											<i class="fas fa-globe me-1"></i>
											{{ app.request.locale|upper }}
										</a>
										<ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 mt-2" aria-labelledby="langDropdown">
											<li>
												<a class="dropdown-item" href="{{ path('app_change_locale', {'locale': 'fr'}) }}">Français (FR)</a>
