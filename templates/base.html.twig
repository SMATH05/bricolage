<!DOCTYPE html>
<html lang="{{ app.request.locale }}" {% if app.request.locale == 'ar' %} dir="rtl" {% endif %}>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="theme-color" content="#2c3e50">
		<link rel="manifest" href="{{ asset('manifest.json') }}">
		<title>
			{% block title %}Bricolage
			{% endblock %}
		</title>

		<script>
			// Immediate theme initialization to prevent flash
(function () {
const savedTheme = localStorage.getItem('theme');
const userTheme = "{{ app.user ? app.user.theme : '' }}";
const theme = savedTheme || userTheme || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
document.documentElement.setAttribute('data-theme', theme);
})();
		</script>

		<link rel="icon" href="/favicon.ico">

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
		<link rel="stylesheet" href="https://bootswatch.com/5/litera/bootstrap.min.css">
		<link rel="stylesheet" href="{{ asset('styles/premium.css') }}"> {% block stylesheets %}{% endblock %}
		</head>
		<body class="d-flex flex-column min-vh-100">
			{% if app.request.attributes.get('_route') not in ['app_home', 'app_login', 'app_register'] %}
				<nav class="navbar navbar-expand-lg premium-navbar shadow-sm py-3">
					<div class="container">
						<a class="navbar-brand fw-bold fs-3" href="{{ path('app_home') }}">
							<i class="fas fa-hammer me-2 text-primary"></i>Bricolage
						</a>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse" id="navbarContent">
							<ul class="navbar-nav me-auto mb-2 mb-lg-0">
								<li class="nav-item">
									<a class="nav-link px-3" href="{{ path('app_social_feed') }}">{{ 'Accueil'|trans }}</a>
								</li>
								{% if is_granted('ROLE_ADMIN') %}
									<li class="nav-item">
										<a class="nav-link px-3 fw-bold text-warning" href="{{ path('app_admin') }}">{{ 'Administration'|trans }}</a>
									</li>
								{% elseif is_granted('ROLE_RECRUTEUR') %}
									<li class="nav-item">
										<a class="nav-link px-3" href="{{ path('app_annonce') }}">{{ 'Mes Annonces'|trans }}</a>
									</li>
									<li class="nav-item">
										<a class="nav-link px-3" href="{{ path('app_recruteur_candidatures') }}">
											{{ 'Candidatures'|trans }}
											{% if app.user.recruteur is defined and app.user.recruteur is not null %}
												{% set cand_count = 0 %}
												{% for ad in app.user.recruteur.annonces %}
													{% set cand_count = cand_count + ad.candidatures|length %}
												{% endfor %}
												{% if cand_count > 0 %}
													<span class="badge bg-danger rounded-pill ms-1" style="font-size: 0.65rem;">{{ cand_count }}</span>
												{% endif %}
											{% endif %}
										</a>
									</li>
								{% elseif is_granted('ROLE_CHERCHEUR') %}
									<li class="nav-item">
										<a class="nav-link px-3" href="{{ path('app_annonce') }}">{{ 'Annonces'|trans }}</a>
									</li>
									<li class="nav-item">
										<a class="nav-link px-3" href="{{ path('app_candidature') }}">{{ 'Mes Candidatures'|trans }}</a>
									</li>
								{% endif %}
								<li class="nav-item">
									<a class="nav-link px-3" href="{{ path('app_marketplace') }}">{{ 'Marketplace'|trans }}</a>
								</li>
								<li class="nav-item">
									<a class="nav-link px-3" href="{{ path('app_chat') }}">
										<i class="far fa-comments me-1"></i>
										{{ 'Messagerie'|trans }}
									</a>
								</li>
							</ul>

							<div
