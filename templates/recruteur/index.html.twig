{% extends 'base.html.twig' %}

{% block title %}Gestion des Recruteurs{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex align-items-center justify-content-between mb-4 border-bottom pb-2">
            <h1>Recruteurs</h1>
            <a href="{{ path('app_recruteur_ajouter') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Nouveau Recruteur
            </a>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">ID</th>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Adresse</th>
                                <th>Téléphone</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for c in recruteurs %}
                            <tr>
                                <td class="ps-4 fw-bold">#{{ c.id }}</td>
                                <td>{{ c.nom }}</td>
                                <td><a href="mailto:{{ c.email }}" class="text-decoration-none">{{ c.email }}</a></td>
                                <td>{{ c.adresse }}</td>
                                <td>{{ c.telephone }}</td>
                                <td class="text-end pe-4">
                                    <a href="{{ path('app_recruteur_modifier', {id: c.id}) }}" class="btn btn-sm btn-link text-decoration-none" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('app_recruteur_supprimer', {id: c.id}) }}" 
                                       class="btn btn-sm btn-link text-danger text-decoration-none" 
                                       onclick="return confirm('Confirmer la suppression ?');"
                                       title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">Aucun recruteur trouvé.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}