{% extends 'base.html.twig' %}

{% block title %}Confirmer la suppression
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card shadow-lg border-0 rounded-4">
					<div class="card-body p-5 text-center">
						<div class="mb-4">
							<i class="fas fa-exclamation-triangle fa-4x text-danger opacity-75"></i>
						</div>

						<h3 class="fw-bold mb-3">Attention !</h3>

						{% if candidatures|length > 0 %}
							<p class="text-muted mb-4">
								Cette annonce est liée à
								<strong>{{ candidatures|length }}
									candidature(s)</strong>.<br>
								La suppression supprimera également toutes les candidatures associées.
							</p>
						{% else %}
							<p class="text-muted mb-4">Voulez-vous vraiment supprimer l'annonce
								<strong>"{{ annonce.titre }}"</strong>
								?</p>
						{% endif %}

						<div class="d-flex justify-content-center gap-3 mt-4">
							<a href="{{ path('app_annonce') }}" class="btn btn-light px-4 rounded-pill">
								Annuler
							</a>
							<a href="{{ path('app_annonce_supprimer', {id: annonce.id, confirm: 'true'}) }}" class="btn btn-danger px-4 rounded-pill shadow-sm">
								<i class="fas fa-trash-alt me-1"></i>
								Oui, supprimer
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
